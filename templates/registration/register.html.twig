{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container">

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class='mb-3'>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Pseudo'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Accepter les termes'
        }) }}

        <button type="submit" class="btn btn-primary">S'inscrire</button><hr/>
    {{ form_end(registrationForm) }}
    
    <h6 class='mt-5'>Vous avez déjà un compte ? Connectez-vous <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a></h6>
    
</div>
{% endblock %}
